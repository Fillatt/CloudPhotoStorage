<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:CloudPhotoStorage.UI.ViewModels"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="CloudPhotoStorage.UI.Views.PhotoView"
			 x:DataType="vm:PhotoViewModel">
	<Grid Margin="10">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="400"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="50"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<Grid ColumnDefinitions="*, *">
			<Button Grid.Column="0"
					Content="Отправить изображение"
					Command="{Binding Commands.SendImage}"
					IsEnabled="{Binding IsConnected}"
					VerticalAlignment="Stretch"
					HorizontalAlignment="Stretch"
					VerticalContentAlignment="Center"
					HorizontalContentAlignment="Center"
					Margin="0 0 10 10"/>
			<Button Grid.Column="1"
					Content="Удалить изображение"
					VerticalAlignment="Stretch"
					HorizontalAlignment="Stretch"
					VerticalContentAlignment="Center"
					HorizontalContentAlignment="Center"
					Margin="0 0 0 10"
					IsEnabled="{Binding CanDelete}"/>
		</Grid>
		<StackPanel Grid.Column="0"
					Grid.Row="1"
					Orientation="Vertical">
			<ComboBox HorizontalAlignment="Stretch"
					  ItemsSource="{Binding Categories}"
					  SelectedItem="{Binding CurrentCategory}"
					  IsEnabled="{Binding IsEnabled}"/>
			<ListBox ItemsSource="{Binding FilteredImageNames}"
					 SelectedItem="{Binding CurrentImageName}">
			</ListBox>
		</StackPanel>
			<TextBlock Grid.Row="0" 
					   Grid.Column="1"
					   Text="{Binding CurrentImageName}"
					   FontSize="20"
					   HorizontalAlignment="Center"
					   VerticalAlignment="Center"
					   Margin=" 10 0 0 0"/>
			<Border Grid.Row="1"
					Grid.Column="1"
					BorderThickness="1"
					Background="LightGray"
					Margin=" 10 0 0 0">
				<Image Source="{Binding Image}"/>
			</Border>
			
			<TextBlock Grid.Row="1"
					   Grid.Column="1"
					   Margin=" 10 0 0 0"
					   HorizontalAlignment="Center"
					   VerticalAlignment="Center"
					   Text="{Binding PlaceHolder}"
					   FontSize="20"
					   IsVisible="{Binding IsPlaceholderVisible}"/>
	</Grid>
</UserControl>
