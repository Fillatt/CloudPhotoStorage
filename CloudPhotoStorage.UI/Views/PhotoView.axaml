<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:CloudPhotoStorage.UI.ViewModels"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="CloudPhotoStorage.UI.Views.PhotoView"
			 x:DataType="vm:PhotoViewModel">
	<Grid Margin="10">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="400"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<StackPanel Grid.Column="0"
					Orientation="Vertical">
			<ComboBox HorizontalAlignment="Stretch"
					  ItemsSource="{Binding Categories}"
					  SelectedItem="{Binding CurrentCategory}"/>
			<ListBox ItemsSource="{Binding ImageNames}"
					 SelectedItem="{Binding CurrentImageName}">
			</ListBox>
		</StackPanel>
		<Grid Grid.Column="1"
			  Margin="10 0 0 0">
			<Grid.RowDefinitions>
				<RowDefinition Height="30"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="50"/>
			</Grid.RowDefinitions>
			<TextBlock Grid.Row="0" 
					   Text="{Binding CurrentImageName}"
					   HorizontalAlignment="Center"
					   VerticalAlignment="Center"
					   Margin="0 0 0 10"/>
			<Border Grid.Row="1" 
					BorderThickness="1"
					Background="LightGray">
				<Image Source="{Binding Image}"/>
			</Border>
			
			<TextBlock Grid.Row="1"
					   HorizontalAlignment="Center"
					   VerticalAlignment="Center"
					   Text="Выберите фотографию"
					   FontSize="20"
					   IsVisible="{Binding IsPlaceholderVisible}"/>
			
			<StackPanel Grid.Row="2" Orientation="Horizontal"
						Margin="0 10 0 0">
				<Button Content="Отправить изображение"
						Command="{Binding Commands.SendImage}"/>
			</StackPanel>
		</Grid>
	</Grid>
</UserControl>
